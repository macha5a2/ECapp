.credit-card-wrapper
  .verification_header
    = render partial: 'items/shared/verification_header'
  .credit-content
    .credit-content__item
      %h2.credit-content__item__title
        支払い方法
  -# = form_tag(credit_cards_path, method: @card, id: 'charge-form', name: "inputForm", class: "credit-content__products") do
  -# = form_tag(credit_cards_path, method: :post, id: 'charge-form', name: "inputForm", class: "credit-content__products") do
  = form_tag(credit_card_path(@item), method: :post, id: 'charge-form', name: "inputForm", class: "credit-content__products") do
    .credit-content__product
      .credit-content__product__title
        %label
          カード番号
        %span
          必須
      .credit-content__product--form
        = text_field_tag "number", "", class: "credit__product__card-number", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number"
        %ul.credit__producd__card-image
          %li
            = image_tag("visa.svg", size: "49x20")
          %li
            = image_tag("master-card", size: "34x20")
          %li
            = image_tag("saison-card.svg", size: "30x20")
          %li
            = image_tag("jcb.svg", size: "32x20")
          %li
            = image_tag("american_express.svg", size: "21x20")
          %li
            = image_tag("dinersclub.svg", size: "32x20")
          %li
            = image_tag("discover.svg", size: "32x20")
      .credit-content__product__title
        %label
          有効期限
        %span
          必須
      .credit-content__product--form
        %select.select__default#exp_month{name: "exp_month", type: "text"}
          %option{value: ""} --
          %option{value: "1"} 01
          %option{value: "2"} 02
          %option{value: "3"} 03
          %option{value: "4"} 04
          %option{value: "5"} 05
          %option{value: "6"} 06
          %option{value: "7"} 07
          %option{value: "8"} 08
          %option{value: "9"} 09
          %option{value: "10"} 10
          %option{value: "11"} 11
          %option{value: "12"} 12
        %span
          月
        %select.select__default#exp_year{name: "exp_year", type: "text"}
          %option{value: ""} --
          %option{value: "2019"}19
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %span
          年
      .credit-content__product__title
        %label
          セキュリティーコード
        %span
          必須
      .credit-content__product--form
        = text_field_tag "cvc", "", class: "credit__product__card-number", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      .credit-content__register#card_token
        = submit_tag "登録する", id: "token_submit", class: "top__margin"
  .verification_footer
    = render partial: 'items/shared/verification_footer'
