.credit-card-show-wrapper
  .verification_header
    = render partial: 'items/shared/verification_header'
  .credit-content
    .credit-content__item
      %h2.credit-content__item__title
        支払い方法
      .payment__main
        .payment__list
          .payment__list__content
            %h3.sub__head クレジットカード一覧
        .card__payment__list
          %form.card__payment__content
          .card__list
            .card__list__picture  
              = image_tag "credit_cards/#{@card_src}", width: '26', height: '20', alt: @card_brand, id: "card_image"
          .card__number 
            = "**** **** **** " + @card_information.last4
          .expire__date 
            - exp_month = @card_information.exp_month.to_s
            - exp_year = @card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          = form_tag(delete_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %input{ type: "hidden", name: "card_id", value: "" }
            %button.delete__button 削除する
        .how__not__regist
          = link_to "支払い方法について" 
  .verification_footer
    = render partial: 'items/shared/verification_footer'