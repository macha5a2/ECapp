.credit-card-wrapper
  .verification_header
    = render partial: 'items/shared/verification_header'
  .credit-content
    .credit-content__item
      %h2.credit-content__item__title
        支払い方法
  .credit-content__product
    .credit-content__product__title
      %label
        カード番号
      %span
        必須
    %form.credit-content__product--form
      %input.credit__product__card-number{name: "", placeholder: "半角数字のみ", type: "text"}/
      %ul.credit__producd__card-image
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/visa.svg?3440331219", size: "49x20")
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/master-card.svg?3440331219", size: "34x20")
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/saison-card.svg?3440331219", size: "30x20")
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/jcb.svg?3440331219", size: "32x20")
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/american_express.svg?3440331219", size: "21x20")
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/dinersclub.svg?3440331219", size: "32x20")
        %li
          = image_tag("//pcweb-assets.mercdn.net/assets/img/card/discover.svg?3440331219", size: "32x20")
    .credit-content__product__title
      %label
        有効期限
      %span
        必須
    %form.credit-content__product--form
      %select
        %option{value: "1"} 01
        %option{value: "2"} 02
        %option{value: "3"} 03
        %option{value: "4"} 04
        %option{value: "5"} 05
        %option{value: "6"} 06
        %option{value: "7"} 07
        %option{value: "8"} 08
        %option{value: "9"} 09
        %option{value: "10"} 10
        %option{value: "11"} 11
        %option{value: "12"} 12
      %span
        月
      %select
        %option{value: "20"} 20
        %option{value: "21"} 21
        %option{value: "22"} 22
        %option{value: "23"} 23
        %option{value: "24"} 24
        %option{value: "25"} 25
        %option{value: "26"} 26
        %option{value: "27"} 27
        %option{value: "28"} 28
        %option{value: "29"} 29
      %span
        年
    .credit-content__product__title
      %label
        セキュリティーコード
      %span
        必須
    %form.credit-content__product--form
      %input.credit__product__card-number{name: "", placeholder: "カード背面4桁もしくは3桁の番号", type: "text"}/
    .credit-content__register
      %button{type: "button"}
        登録する
  .verification_footer
    = render partial: 'items/shared/verification_footer'