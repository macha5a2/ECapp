.verification-address-wrapper
  .verification_header
    = render partial: 'items/shared/verification_header'
  .verification-address-content
    .verification-address-content__item
      %h2.verification-address-content__item__title
        発送元・お届け先住所入力
  .verification-address-content__product
    .verification-address-content__product--title
      %label
        お名前
      %span
        必須
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) 山田", type: "text"}/
      %br
      %input.verification-address__product--first-name{name: "", placeholder: "例) 彩", type: "text"}/
    .verification-address-content__product--title
      %label
        お名前カナ
      %span
        必須
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) ヤマダ", type: "text"}/
      %br
      %input.verification-address__product--first-name{name: "", placeholder: "例) アヤ", type: "text"}/
    .verification-address-content__product--title
      %label
        郵便番号
      %span
        必須
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) 123-4567", type: "text"}/
    .verification-address-content__product--title
      %label
        都道府県
      %span
        必須
    %form.verification-address-content__product--form
      %select
        %option{value: "0"} 北海道
        %option{value: "1"} 青森県
        %option{value: "2"} 秋田県
    .verification-address-content__product--title
      %label
        市区町村
      %span
        必須
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) 横浜市緑区", type: "text"}/
    .verification-address-content__product--title
      %label
        番地
      %span
        必須
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) 青山1-1-1", type: "text"}/
    .verification-address-content__product--title
      %label
        建物名
      %span.any
        任意
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) 柳ビル103", type: "text"}/
    .verification-address-content__product--title
      %label
        電話
      %span.any
        任意
    %form.verification-address-content__product--form
      %input.verification-address__product--last-name{name: "", placeholder: "例) 09012345678", type: "text"}/
    .verification-address-content__register
      %button{type: "button"}
        登録する
  .verification_footer
    = render partial: 'items/shared/verification_footer'